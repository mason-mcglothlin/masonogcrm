@model UserAccount

@{
    ViewBag.Title = "New User";
}

<h2>New User</h2>


@using (Html.BeginForm(nameof(UserAccountController.Create), nameof(UserAccountController).RemoveControllerFromName())) 
{
    @Html.AntiForgeryToken()
    
