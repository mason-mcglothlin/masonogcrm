@model LoginAttemptViewModel
@{
    Layout = "~/Views/Shared/_UnauthenticatedLayout.cshtml";
    ViewBag.Title = "Login";
}

<h2>OgCRM</h2>
<h4>Login</h4>

<p class="text-danger">@Model.Message</p>

@using (Html.BeginForm(nameof(UserAccountController.Login), nameof(UserAccountController).RemoveControllerFromName()))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="EmailTB">Email address</label>
        <input type="email" class="form-control" id="EmailTB" name="EmailAddress" placeholder="Email Address">
    </div>
    <div class="form-group">
        <label for="PasswordTB">Password</label>
        <input type="password" class="form-control" id="PasswordTB" name="Password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary block full-width m-b"><i class="fa fa-sign-in"></i> Login</button>
}
<p class="text-muted text-center"><small>Do not have an account?</small></p>
<a href="@Url.Action(nameof(UserAccountController.Register), nameof(UserAccountController).RemoveControllerFromName())" class="btn btn-default btn-white btn-block">Register</a>
